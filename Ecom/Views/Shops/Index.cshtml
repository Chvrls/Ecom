@model IEnumerable<Ecom.Models.Shop>

@{
    ViewData["Title"] = "Index";
}

<h1 class="mb-3">Shop</h1>

<btn class="btn btn-success mb-3">
    <a asp-action="Create" class="text-decoration-none text-white">Add products</a>
</btn>
<div class="row">
    <div class="col-md-4">
        <form asp-action="ShowSearchResults">

            <div class="form-group mb-4">
                <label for="SearchPhrase" class="control-label"></label>
                <input name="SearchPhrase" class="form-control" placeholder="Search"/>

            </div>

            <div class="form-group mb-2">
                <input type="submit" value="Search" class="btn btn-success text-white"/>
            </div>
        </form>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductDescription)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductDescription)
            </td>
            <td>
                     <btn class="btn btn-success">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="text-decoration-none text-white">Modify</a> 
                        </btn>
                        <btn class="btn btn-success">
                            <a asp-action="Details" asp-route-id="@item.Id" class="text-decoration-none text-white">Details</a>
                        </btn>
                        <btn class="btn btn-success">
                            <a asp-action="Delete" asp-route-id="@item.Id" class="text-decoration-none text-white">Delete</a>
                        </btn>
            </td>
        </tr>
}
    </tbody>
</table>
